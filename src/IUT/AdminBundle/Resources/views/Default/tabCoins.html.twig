{% extends "IUTAdminBundle::layout.html.twig" %}

{% block title %}
    Table Coins  {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    Table <i class="fa fa-chevron-right"></i> Coins
{% endblock %}



{% block main %}

    <div class="card card-body mb-4">
        <!--Table-->
        <table class="table table-hover">

            <!--Table head-->
            <thead>
            <tr class="orange lighten-3">
                <th>Id</th>
                <th>Value</th>
                <th>Devise</th>
                <th>Currencies_id</th>

            </tr>
            </thead>
            <!--Table head-->

            <!--Table body-->
            <tbody>
            {% for coin in listCoins %}
                <tr>

                    <td>{{ coin.id }}</td>
                    <td>{{ coin.value }}</td>
                    <td>{{ coin.currencies.name }}</td>
                    <td>{{ coin.currencies.id }}</td>


                </tr>
            {% endfor  %}
            </tbody>
            <!--Table body-->

        </table>
        <!--Table-->
    </div>

{% endblock %}