{% extends "IUTAdminBundle::layout.html.twig" %}

{% block title %}
    Ajouter Pièce   {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    Ajouter <i class="fa fa-chevron-right"></i> Pièce
{% endblock %}

{% block main %}

    <div class="row">
        <div class="col-md-4 ">

            <div class="card card-body mb-4">
                <table class="table table-hover">
                    <thead>
                    <tr class="orange lighten-3">
                        <th>Valeur</th>
                        <th>Devise</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for coin in listCoins %}
                        <tr>

                            <td>{{ coin.value }}</td>
                            <td>{{ coin.currencies.name }}</td>
                            <td><a href="{{ path('iut_admin_delete',{'id': coin.id, 'classe': 'Coins'}) }}"><i
                                            class="fa fa-remove"></a></i></td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>


        </div>
        <div class="col-md-8 mt-5">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-warning" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            <div class="card card-body mb-4">
                <p class="h4 text-center mb-4">Ajouter une pièce</p>
                {{ form_start(form) }}

                {{ form_errors(form) }}


                <div class="md-form mb-5">
                    {{ form_label(form.value, "Valeur") }}

                    {{ form_errors(form.value) }}


                    {{ form_widget(form.value, {'attr': {'class': 'form-control'}}) }}

                </div>

                <div class="form-check radio-orange mb-5">

                    {{ form_errors(form.currencies) }}

                    {{ form_widget(form.currencies, {'attr': {'class': 'form-control'}}) }}

                </div>


                {{ form_widget(form.Ajouter, {'attr': {'class': 'btn btn-orange'}}) }}

                {{ form_rest(form) }}

                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}

