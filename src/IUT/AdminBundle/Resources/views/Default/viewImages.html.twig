{% extends "IUTAdminBundle::layout.html.twig" %}

{% block title %}
    Visionner Images  {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    Visionner <i class="fa fa-chevron-right"></i>  Images
{% endblock %}


{% block main %}

    <div class="d-flex align-content-around flex-wrap">
        {% for image in listImages %}

            <div class="col-md-3 p-2">


                <div class="card card-cascade narrower mb-r" style="margin-top: 28px">

                    <div class="view white">
                        <img src="{{ asset('uploads/images/' ~ image.image) }}"
                             class="img-fluid" alt="image de pièce">
                        <a href="{{ asset('uploads/images/' ~ image.image) }}">
                            <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title"> Id : {{ image.id }}     Nom : {{ image.name }}</h5>

                        <a href="{{ asset('uploads/images/' ~ image.image) }}" download style="color: #000"><i
                                    class="fa fa-download"></i></a>  
                        <a href="{{ path('iut_admin_delete', {'id': image.id, 'classe': "Images" }) }}"
                           style="color: #000"><i class="fa fa-remove"></i></a>


                    </div>

                </div>


            </div>
            <!--Grid column-->
        {% endfor %}
    </div>
{% endblock %}
