{% extends "IUTAdminBundle::layout.html.twig" %}

{% block title %}
    Table Users  {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    Table <i class="fa fa-chevron-right"></i> Users
{% endblock %}



{% block main %}

    <div class="card card-body mb-4">
        <table class="table table-hover">

            <thead>
            <tr class="orange lighten-3">
                <th>Id</th>
                <th>Login</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Email</th>
            </tr>
            </thead>
            <tbody>
            {% for user in listUsers %}
                <tr>

                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.description }}</td>
                    <td>{{ user.image }}</td>
                    <td>{{ user.email }}</td>

                </tr>
            {% endfor %}
            </tbody>

        </table>
    </div>

{% endblock %}