{% extends "IUTAdminBundle::layout.html.twig" %}

{% block title %}
    Table Images  {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    Table <i class="fa fa-chevron-right"></i> Images
{% endblock %}



{% block main %}

    <div class="card card-body mb-4">
        <!--Table-->
        <table class="table table-hover">

            <!--Table head-->
            <thead>
            <tr class="orange lighten-3">
                <th>Id</th>
                <th>Coins_id</th>
                <th>Name</th>
                <th>url</th>
                <th>Valeur</th>
                <th>Devise</th>
            </tr>
            </thead>
            <!--Table head-->

            <!--Table body-->
            <tbody>
            {% for image in listImages %}
                <tr>

                    <td>{{ image.id }}</td>
                    <td>{{ image.coins.id }}</td>
                    <td>{{ image.name }}</td>
                    <td>{{ image.url }}</td>
                    <td>{{ image.coins.value }}</td>
                    <td>{{ image.coins.currencies.name }}</td>

                </tr>
            {% endfor  %}
            </tbody>
            <!--Table body-->

        </table>
        <!--Table-->
    </div>

{% endblock %}