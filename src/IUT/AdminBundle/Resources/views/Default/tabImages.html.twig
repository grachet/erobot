{% extends "IUTAdminBundle::layout.html.twig" %}

{% block title %}
    Table Images  {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    Table <i class="fa fa-chevron-right"></i> Images
{% endblock %}



{% block main %}

    <div class="card card-body mb-4">
        <!--Table-->
        <table class="table table-hover">

            <!--Table head-->
            <thead>
            <tr class="orange lighten-3">
                <th>Id</th>
                <th>Name</th>
                <th>Nom du fichier</th>
                <th>Coins_id</th>
                <th>Valeur</th>
                <th>Devise</th>
            </tr>
            </thead>
            <!--Table head-->

            <!--Table body-->
            <tbody>
            {% for image in listImages %}


                {% for coin in image.coins %}
                    <tr>
                        <td>{% if loop.first %}{{ image.id }}{% endif %}</td>
                        <td>{% if loop.first %}{{ image.name }}{% endif %}</td>
                        <td>{% if loop.first %}{{ image.image }}{% else %}<i class="fa fa-circle-o"></i>{% endif %}</td>
                        <td>{{ coin.id }}</td>
                        <td>{{ coin.value }}</td>
                        <td>{{ coin.currencies.name }}</td>
                    </tr>
                {% endfor %}

            {% endfor %}
            </tbody>
            <!--Table body-->

        </table>
        <!--Table-->
    </div>

{% endblock %}