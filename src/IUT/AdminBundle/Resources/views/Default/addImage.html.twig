{% extends "IUTAdminBundle::layout.html.twig" %}

{% block title %}
    Ajouter Image  {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    Ajouter <i class="fa fa-chevron-right"></i> Image
{% endblock %}



{% block main %}


    <div class="row">
        <div class="col-md-8 mt-5">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-warning" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            <div class="card card-body mb-4">
                <p class="h4 text-center mb-4">Ajouter une image (2mo max)</p>
                <a href="https://tinypng.com/" class="text-center text-warning" target="_blank">Compresseur en ligne</a>
                {{ form_start(form) }}

                {{ form_errors(form) }}


                <div class="md-form mb-5">
                    {{ form_label(form.name, "Nom") }}

                    {{ form_errors(form.name) }}

                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}

                </div>

                <div class="md-form mb-5">
                    <div class=" alert-warning">
                        {{ form_errors(form.imageFile, {'attr': {'class': ''}}) }}
                    </div>

                    <div class="file-field">
                        <div class="btn btn-orange btn-sm float-left">
                            <span>Choisir une image</span>
                            {{ form_widget(form.imageFile, {'attr': {'class': ''}}) }}
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text"
                                   placeholder="Envoyer votre image sur le serveur">
                        </div>
                    </div>


                </div>

                <div class="form-check checkbox-orange mb-5">

                    {{ form_errors(form.coins) }}



                    {{ form_widget(form.coins, {'attr': {'class': 'form-control'}}) }}

                </div>


                {{ form_widget(form.Ajouter, {'attr': {'class': 'btn btn-orange'}}) }}


                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>

        <div class="col-md-4 mt-5">

            <div class="card">

                <img src="" alt="">

            </div>

        </div>

    </div>

{% endblock %}

