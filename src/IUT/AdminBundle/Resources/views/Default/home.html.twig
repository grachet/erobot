{% extends "IUTAdminBundle::layout.html.twig" %}

{% block title %}
    Accueil  {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    Home
{% endblock %}

{% block main %}

    <div class="row mb-3 text-center ">


        <div class="col-md-3  mb-2">
            <a href="{{ path("iut_admin_addCoins") }}">
                <div class="card card-body orange p-2 text-white">
                    <span> <i class="fa fa-circle-o"></i> Pièces : {{ nbCoins }}</span>
                </div>
            </a>
        </div>


        <div class="col-md-3 ">
            <a href="{{ path("iut_admin_addCurrencies") }}">
                <div class="card card-body orange p-2  mb-2 text-white">
                    <span> <i class="fa fa-dollar"></i> Devises : {{ nbCurrencies }}</span>
                </div>
            </a>
        </div>


        <div class="col-md-3 ">
            <a href="{{ path("iut_admin_addImage") }}">
                <div class="card card-body orange p-2  mb-2 text-white">
                    <span> <i class="fa fa-image"></i> Images : {{ nbImages }}</span>
                </div>
            </a>
        </div>


        <div class="col-md-3 ">
            <a href="{{ path("iut_admin_addFile") }}">
                <div class="card card-body orange p-2  mb-2 text-white">
                    <span> <i class="fa fa-file"></i> Fichier : {{ nbFiles }}</span>
                </div>
            </a>
        </div>


    </div>

    <div class="row">

        <div class="col-lg-3 col-md-4  mb-2">


            <div class="card card-cascade narrower mb-r" style="margin-top: 28px">

                <div class="view white">
                    <img src="{{ asset('uploads/images/' ~ app.user.image) }}"
                         class="img-fluid" alt="photo de profil">
                </div>

                <div class="card-body">
                    <h4 class="card-title">Bonjour </h4>
                    <h5>{{ app.user.name }}</h5>


                </div>

            </div>


        </div>
        <div class="col-lg-9 col-md-8 mt-2">

            <div class="card elegant-color text-center z-depth-2 text-white mb-2">
                <div class="card-body">
                    <h4 class="text-center">Messages Admin</h4>
                </div>
            </div>


            {% for file in listFiles %}
                <div class="card card-body mb-2">

                    {% if file.name != null %}
                        <h4 class="card-title">{{ file.name }}</h4>
                    {% endif %}

                    {% if file.description != null %}
                        <p class="card-text">{{ file.description }}</p>
                    {% endif %}

                    {% if file.nameFile != null %}
                        <div class="flex-row ">
                            <a href="{{ asset('uploads/files/' ~ file.nameFile) }}" target="_blank"
                               class="card-link text-warning"><i
                                        class="fa fa-file-pdf-o"></i> PDF</a>    
                        </div>
                    {% endif %}

                </div>

            {% endfor %}


        </div>
    </div>









{% endblock %}

