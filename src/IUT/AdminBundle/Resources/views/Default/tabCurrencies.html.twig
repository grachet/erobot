{% extends "IUTAdminBundle::layout.html.twig" %}

{% block title %}
    Table Currencies  {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    Table <i class="fa fa-chevron-right"></i> Currencies
{% endblock %}



{% block main %}

    <div class="card card-body mb-4">
        <!--Table-->
        <table class="table table-hover">

            <!--Table head-->
            <thead>
            <tr class="orange lighten-3">
                <th>Id</th>
                <th>Name</th>
            </tr>
            </thead>
            <!--Table head-->

            <!--Table body-->
            <tbody>
            {% for currencies in listCurrencies %}
                <tr>

                    <td>{{ currencies.id }}</td>
                    <td>{{ currencies.name }}</td>

                </tr>
            {% endfor  %}
            </tbody>
            <!--Table body-->

        </table>
        <!--Table-->
    </div>

{% endblock %}